{
  "name": "wixibot",
  "displayName": "WixiBot",
  "description": "Multipurpose personal bot",
  "author": "Wixonic <contact@wixonic.fr> (https://wixonic.fr)",
  "bugs": {
    "email": "contact@wixonic.fr"
  },
  "homepage": "https://github.com/Wixonic/Bot#readme",
  "license": "MIT",
  "version": "0.1.236",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Wixonic/Bot.git"
  },
  "main": "app.js",
  "scripts": {
    "pre": "clear; node increment.js",
    "start": "npm run pre; electron ./",
    "build": "npm run pre; electron-builder build --mac --arm64 -c.mac.identity=null"
  },
  "engines": {
    "node": ">=18.x.x"
  },
  "dependencies": {
    "@types/discord-rpc": "^4.0.8",
    "discord-rpc": "^4.0.1",
    "express": "^4.18.2",
    "ffmpeg-static": "^5.2.0",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "electron": "^28.2.3",
    "electron-builder": "^24.13.1"
  },
  "build": {
    "appId": "fr.wixonic.bot",
    "artifactName": "${name}.${os}.${arch}.${ext}",
    "executableName": "Bot",
    "productName": "WixiBot",
    "asarUnpack": [
      "node_modules/ffmpeg-static/*",
      "**/*.applescript"
    ],
    "files": [
      "assets/**",
      "plugins/**",
      "SSL/**",
      "app.js",
      "exec.js",
      "typedef.js"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "target": "dmg"
    }
  }
}